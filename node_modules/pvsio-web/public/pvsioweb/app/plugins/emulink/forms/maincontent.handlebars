    <div id="EmuchartToolbar" >
        <ul class="dropdown dropdown-vertical">
            <li class='toolbar'>
                <hr>
                <a href="#!" class="toolbar-tooltip" id="btn_toolbarBrowse">
                    <span title="Browse diagram"
                          class="glyphicon glyphicon-arrow-right" 
                          style="font-size: 1.2em 
                                 -ms-transform:rotate(-120deg); /* IE 9 */
                                 -moz-transform:rotate(-120deg); /* Firefox */
                                 -webkit-transform:rotate(-120deg); /* Safari and Chrome */
                                 -o-transform:rotate(-120deg); /* Opera */
                                 padding-left: 1px;">
                    </span></a>
                <hr>
                <a href="#!" class="toolbar-tooltip" id="btn_toolbarZoomIn">
